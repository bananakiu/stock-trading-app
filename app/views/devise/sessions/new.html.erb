<div class="w-full h-full flex flex-col justify-center items-center">
  <div class="
  flex flex-col
  px-8 pt-6 pb-6
  bg-white rounded-lg shadow-md
  text-black
  w-96
  ">
    <%# heading %>
    <h2 class="text-2xl font-semibold">Login</h2>

    <%# form %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex flex-col my-4">
        <%= f.label :email, class: "
        text-md text-gray-700 font-semibold mb-2
        " %>
        <%= f.email_field :email, placeholder: "johndoe@email.com", autofocus: true, autocomplete: "email", class: "
        appearance-none
        shadow border rounded-md
        w-full py-2 px-3 leading-tight
        text-gray-700
        focus:shadow-outline
        " %>
      </div>

      <div class="flex flex-col my-4">
        <%= f.label :password, class: "
        text-md text-gray-700 font-semibold mb-2
        "%>
        <%= f.password_field :password, placeholder: "*********", autocomplete: "current-password", class: "
        appearance-none
        shadow border rounded-md
        w-full py-2 px-3 leading-tight
        text-gray-700
        focus:shadow-outline
        " %>
      </div>

      <div class="flex justify-between items-center">
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, class: "
            h-4 w-4 mr-2
            border-gray-300 rounded-md
            cursor-pointer
            focus:ring-blue-400
            " %>
            <%= f.label :remember_me, class: "
            text-sm text-gray-700 font-semibold
            " %>
          </div>
        <% end %>
        <div>
          <%= link_to "Forgot password?", new_password_path(resource_name), class: "
          text-blue-500 hover:text-blue-700
          text-sm font-semibold
          " %>
        </div>
      </div>

      <%# login %>
      <div class="mt-8">
        <%= f.submit "Log in", class: "
        w-full py-2 px-4
        text-white font-bold
        bg-gray-600 hover:bg-gray-500
        rounded-lg
        cursor-pointer
        transition-all duration-200
        "%>
      </div>
    <% end %>

    <%# links %>
    <div class="flex flex-col justify-center items-center mt-2">
      <div>
        <%= link_to "Don't have an account?", new_registration_path(resource_name), class: "
        text-blue-500 hover:text-blue-700
        text-sm font-semibold
        " %>
      </div>
    </div>
  </div>
</div>