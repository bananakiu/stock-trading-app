<p id="notice"><%= notice %></p>

<h1>Portfolio</h1>
<table>
    <thead>
        <tr>
            <th colspan="3">Stock</th>
            <th colspan="3">Shares</th>
            <th colspan="3">Total Cost</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @portfolio.each do |portfolio_stock| %>
            <tr>
                <td colspan="3"><%= portfolio_stock.stock %></td>
                <td colspan="3"><%= portfolio_stock.shares %></td>
                <td colspan="3"><%= portfolio_stock.total_cost %></td>
                <td colspan="3"><%= link_to 'More details', portfolio_stock %></td>
            </tr>
        <% end %>
    </tbody>
</table>