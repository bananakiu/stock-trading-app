<div class="flex justify-between mt-5"> 
  <div class="flex">  
    <img src="<%= @logo.url %>" alt="Stock Logo" width="55" height="auto" class="rounded-sm">

    <div class="ml-4">
      <h1> <span class="text-xl font-bold"> <%= @company.symbol %> </span> | <%= @company.company_name %> </h1>
      <p> <span class="text-xl font-bold mr-2"> <%= number_to_currency(@quote.latest_price) %> </span> <span class=""> <%= @quote.change %> </span> (<%= @quote.change_percent_s %>) </p>
    </div>
  </div>

  <button class="my-2 py-2 px-5 text-white bg-green-600 hover:bg-green-700 rounded-lg cursor-pointer transition-all duration-200"> Trade </button>
</div> 
